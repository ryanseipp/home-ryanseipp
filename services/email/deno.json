{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "react": "npm:react@^19.0.0",
    "react/jsx-runtime": "npm:react@^19.0.0/jsx-runtime",
    "@types/react": "npm:@types/react@^19.0.0",
    "react-dom": "npm:react-dom@^19.0.0",
    "@react-email/components": "npm:@react-email/components@^1.0.1",
    "kafkajs": "npm:kafkajs@^2.2.4",
    "resend": "npm:resend@^6.5.2",
    "zod": "npm:zod@^4.1.13",
    "@bufbuild/protobuf": "npm:@bufbuild/protobuf@^2.10.1",
    "@bufbuild/protobuf/wire": "npm:@bufbuild/protobuf@^2.10.1/wire",
    "@opentelemetry/api": "npm:@opentelemetry/api@^1.9.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/expect": "jsr:@std/expect@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0"
  },
  "tasks": {
    "dev": "OTEL_DENO=true deno run --watch --unstable-otel --allow-net --allow-env --allow-read src/index.ts",
    "start": "OTEL_DENO=true deno run --unstable-otel --allow-net --allow-env --allow-read src/index.ts",
    "test": "deno test --allow-all --quiet",
    "test:watch": "deno test --watch --allow-all --quiet",
    "compile": "deno compile --unstable-otel --allow-net --allow-env --allow-read --output email src/index.ts",
    "build": "deno task proto:generate && deno task compile",
    "proto:generate": "cd ../.. && buf generate --template buf.gen.yaml proto"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "nodeModulesDir": "auto"
}
